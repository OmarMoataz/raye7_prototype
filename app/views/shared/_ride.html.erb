<%= form_for object, url: url do |f| %>

  <%= f.label(:departure_time) %><br>
  <%= f.datetime_select(:departure_time) %><br>

  <%= f.label(:source_id) %><br>
  <%= f.number_field(:source_id) %><br>

  <%= f.label(:destination_id) %><br>
  <%= f.number_field(:destination_id) %><br>

  <% if current_user.role == "driver" %>
    <%= f.label(:number_seats) %> <br>
    <%= f.number_field(:number_seats) %> <br>
  <% end %>

  <%= f.submit "Create" %>
<% end %>